<nav class="navbar">
  <div class="container" id="nav-container">
      <div class="col-md-10"></div>
      <a class="col-md-1 btn btn-primary" href="/" id="logout" role="button">logout</a>
  </div>
</nav>
<div class="container">
  <div class="row">
    <h1 class="col-md mt-2" id="welcome">Welcome back, {{name}}!</h1>
  </div>
  <div class="row mx-auto ">
    <h3 id="h3">Feel free to update your availability for the week</h3>
  </div>
  <div class="row userLogin">
    <form class="col-md" id="updateForm" action=""method="post">
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-secondary {{#if account.monday}}active{{/if}}">
          <input type="checkbox" name="days"autocomplete="off" {{#if account.monday}}checked{{/if}} value="monday">Monday
        </label>
        <label class="btn btn-secondary {{#if account.tuesday}}active{{/if}}">
          <input type="checkbox" name="days" autocomplete="off" {{#if account.tuesday}}checked{{/if}} value="tuesday">Tuesday
        </label>
        <label class="btn btn-secondary {{#if account.wednesday}}active{{/if}}">
          <input type="checkbox" name="days" autocomplete="off" {{#if account.wednesday}}checked{{/if}} value="wednesday">Wednesday
        </label>
        <label class="btn btn-secondary {{#if account.thursday}}active{{/if}}">
          <input type="checkbox" name="days" autocomplete="off" {{#if account.thursday}}checked{{/if}} value="thursday">Thursday
        </label>
        <label class="btn btn-secondary {{#if account.friday}}active{{/if}}">
          <input type="checkbox" name="days" autocomplete="off" {{#if account.friday}}checked{{/if}} value="friday">Friday
        </label>
        <label class="btn btn-secondary {{#if account.saturday}}active{{/if}}">
          <input type="checkbox" name="days" autocomplete="off" {{#if account.saturday}}checked{{/if}} value="saturday">Saturday
        </label>
        <label class="btn btn-secondary {{#if account.sunday}}active{{/if}}">
          <input type="checkbox" name="days" autocomplete="off" {{#if account.sunday}}checked{{/if}} value="sunday">Sunday
        </label>
      </div><br>
      <button class="btn btn-primary mdupdateDays mt-3" type="submit" name="submit">Submit Days</button>
      {{#if messages.submitted}}
        <div id="loader"></div>
        <script src="/function.js" charset="utf-8"></script>
      {{/if}}
      {{#if messages.feedback}}
        <div id="feedback" class="alert alert-success" role="alert">
          Schedule succefully updated!
        </div>
      {{/if}}
    </form>
  </div>
</div>
